<form id="userEdit">
    <div class="errorMsg"></div>
    <div>
        <label for="firstName">First Name</label>
        <input type="text" name="first" class="first" value="<%= currentUser.name.first %>">
    </div>
    <div>
        <label for="lastName">Last Name</label>
        <input type="text" name="last" class="last" value="<%= currentUser.name.last %>">
    </div>
    <div>
        <label for="age">Age</label>
        <input type="number" name="age" class="age" value="<%= currentUser.age %>">
    </div>
    <input type="submit" class="submit" value="送信">
</form>
<script src="/javascripts/users/editValidation.js"></script>